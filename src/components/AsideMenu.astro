---
import LibraryIcon from "@/icons/Library.astro";
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";
import SideMenuItem from "./SideMenuItem.astro";
import SideMenuCard from "./SideMenuCard.astro";

import { playlists } from "@/lib/data";
---

<nav class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg py-2 px-4">
    <div class="flex items-center justify-center lg:justify-start gap-x-4 py-3 px-1">
      <img src="/spotify.svg" alt="Spotify" class="w-8 h-8" />
      <h1
        class="text-white
        text-3xl
        lg:text-xl
        font-bold
        uppercase
        leading-none
        whitespace-nowrap"
        >
        Scrotify
      </h1>
    </div>
    <ul>
      <SideMenuItem href="/">
        <HomeIcon />
        Inicio
      </SideMenuItem>
      <SideMenuItem>
        <SearchIcon />
        Buscar
      </SideMenuItem>
    </ul>
  </div>
  <div class="bg-zinc-900 rounded-lg py-2 px-4 flex-1">
    <ul role="list">
      <SideMenuItem href="/">
        <LibraryIcon />
        Tu biblioteca
      </SideMenuItem>

      {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
    </ul>
  </div>
</nav>
